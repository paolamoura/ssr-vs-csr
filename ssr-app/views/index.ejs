<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>SSR</title>
  <link rel="stylesheet" href="/public/styles.css" />
</head>
<body>
  <header class="container">
    <h1>SSR - Lista de Usuários</h1>
    <p class="muted">Renderização no servidor (HTML chega pronto)</p>
  </header>

  <main class="container">
    <form class="toolbar" method="get" action="/">
      <input name="q" id="search" type="search" placeholder="Buscar por nome, e-mail ou cargo..."
             value="<%= (typeof q !== 'undefined' ? q : '') %>" />
      <span class="status">Pronto</span>
    </form>

    <ul class="card-list">
      <% (Array.isArray(users) ? users : []).forEach(u => { %>
        <li class="card">
          <h3 class="title"><%= u.name %></h3>
          <p class="detail">Email: <%= u.email %></p>
          <p class="detail">Cargo: <%= u.role %></p>
          <a class="btn outline" href="/user/<%= u.id %>">Ver detalhes</a>
        </li>
      <% }) %>
    </ul>

    <% 
      const _page    = (typeof page     !== 'undefined' ? page     : 1);
      const _pages   = (typeof pages    !== 'undefined' ? pages    : 1);
      const _size    = (typeof pageSize !== 'undefined' ? pageSize : 4);
      const _total   = (typeof total    !== 'undefined' ? total    : (Array.isArray(users) ? users.length : 0));
      const _q       = (typeof q        !== 'undefined' ? q        : '');
    %>

    <div class="pager">
      <% if (_page > 1) { %>
        <a class="btn" href="/?q=<%= encodeURIComponent(_q) %>&page=<%= _page - 1 %>&pageSize=<%= _size %>">Anterior</a>
      <% } else { %>
        <span class="btn ghost">Anterior</span>
      <% } %>

      <span class="muted">Página <%= _page %>/<%= _pages %> • <%= _total %> resultado(s)</span>

      <% if (_page < _pages) { %>
        <a class="btn" href="/?q=<%= encodeURIComponent(_q) %>&page=<%= _page + 1 %>&pageSize=<%= _size %>">Próxima</a>
      <% } else { %>
        <span class="btn ghost">Próxima</span>
      <% } %>
    </div>
  </main>
  
</body>
</html>
